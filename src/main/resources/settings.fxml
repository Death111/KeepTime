<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.SettingsController">
   <children>
      <VBox spacing="10.0">
         <children>
            <Group layoutX="10.0" layoutY="10.0">
               <children>
                  <VBox>
                     <children>
                        <Label text="Default" />
                        <HBox spacing="10.0">
                           <children>
                              <Label alignment="TOP_LEFT" contentDisplay="TOP" prefWidth="100.0" text="Background" />
                              <ColorPicker fx:id="defaultBackgroundColor" />
                              <Button fx:id="resetDefaultBackgroundButton" mnemonicParsing="false" text="Reset" />
                           </children>
                        </HBox>
                        <HBox spacing="10.0">
                           <children>
                              <Label alignment="TOP_LEFT" contentDisplay="TOP" prefWidth="100.0" text="Font" />
                              <ColorPicker fx:id="defaultFontColor" />
                              <Button fx:id="resetDefaultFontButton" mnemonicParsing="false" text="Reset" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </Group>
            <Group>
               <children>
                  <VBox>
                     <children>
                        <Label text="Hover" />
                        <HBox spacing="10.0">
                           <children>
                              <Label alignment="TOP_LEFT" contentDisplay="TOP" prefHeight="17.0" prefWidth="100.0" text="Background" />
                              <ColorPicker fx:id="hoverBackgroundColor" />
                              <Button fx:id="resetHoverBackgroundButton" mnemonicParsing="false" text="Reset" />
                           </children>
                        </HBox>
                        <HBox spacing="10.0">
                           <children>
                              <Label alignment="TOP_LEFT" contentDisplay="TOP" prefWidth="100.0" text="Font" />
                              <ColorPicker fx:id="hoverFontColor" />
                              <Button fx:id="resetHoverFontButton" mnemonicParsing="false" text="Reset" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </Group>
            <Group layoutX="10.0" layoutY="88.0">
               <children>
                  <VBox>
                     <children>
                        <Label text="Taskbar" />
                        <HBox spacing="10.0">
                           <children>
                              <Label alignment="TOP_LEFT" contentDisplay="TOP" prefWidth="100.0" text="Font" />
                              <ColorPicker fx:id="taskBarColor" />
                              <Button fx:id="resetTaskBarFontButton" mnemonicParsing="false" text="Reset" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </Group>
            <Group layoutX="10.0" layoutY="166.0">
               <children>
                  <VBox>
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Hotkey" />
                              <Label alignment="TOP_LEFT" contentDisplay="TOP" disable="true" prefWidth="100.0" text="(global keylogger!)" />
                           </children>
                        </HBox>
                        <HBox spacing="10.0">
                           <children>
                              <Label alignment="TOP_LEFT" contentDisplay="TOP" prefWidth="100.0" text="Use Hotkey" />
                              <CheckBox fx:id="useHotkeyCheckBox" mnemonicParsing="false" text="Use Hotkey (Strg+Win)" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </Group>
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="saveButton" mnemonicParsing="false" text="Save" />
                  <Button fx:id="cancelButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Label alignment="CENTER_RIGHT" disable="true" layoutX="245.0" layoutY="260.0" prefHeight="17.0" prefWidth="52.0" text="v 1.0.0" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0" />
   </children>
</AnchorPane>
